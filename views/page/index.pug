block content
    form(action="/add" method="post")
        div.box
            div.box-header.with-border
                h3.box-title New paste
            div.box-body
                div.form-group
                    textarea.form-control(rows="10" placeholder="Paste ur code here" name="content" maxlength="250000" required)
        div.box
            div.box-header.with-border
                h3.box-title Optional paste settings
            div.box-body
                div.form-group
                    label Syntax highlighting
                    select.form-control(name="syntax" required)
